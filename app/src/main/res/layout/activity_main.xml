<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00BCD4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solutionText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#E3E2E2"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="64dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:id="@+id/buttonLayout"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:id="@+id/firstRow"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClear"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#F44336"
            android:onClick="clear"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#3F51B5"
            android:onClick="delete"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="%"
            android:textSize="32dp"
            android:id="@+id/buttonPercent"
            android:backgroundTint="#3F51B5"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDiv"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#3F51B5"
            android:onClick="divide"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:gravity="center"
        android:id="@+id/secondRow"
        android:layout_below="@id/firstRow">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="7"
            android:textSize="32dp"
            android:id="@+id/button7"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="32dp"
            android:id="@+id/button8"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="9"
            android:textSize="32dp"
            android:id="@+id/button9"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMultiply"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#3F51B5"
            android:onClick="multiply"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:gravity="center"
        android:id="@+id/thirdRow"
        android:layout_below="@id/secondRow">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="4"
            android:textSize="32dp"
            android:id="@+id/button4"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="32dp"
            android:id="@+id/button5"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="6"
            android:textSize="32dp"
            android:id="@+id/button6"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubtract"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#3F51B5"
            android:onClick="subtract"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="36dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:gravity="center"
        android:id="@+id/forthRow"
        android:layout_below="@id/thirdRow">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="32dp"
            android:id="@+id/button1"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="32dp"
            android:id="@+id/button2"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="3"
            android:textSize="32dp"
            android:id="@+id/button3"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddition"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#3F51B5"
            android:onClick="add"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333333"
        android:gravity="center"
        android:id="@+id/fithRow"
        android:layout_below="@id/forthRow">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonplusmin"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#9C27B0"
            android:onClick="sign"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="0"
            android:textSize="32dp"
            android:id="@+id/button0"
            android:backgroundTint="#00BCD4"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textColor="@color/white"
            android:text="."
            android:textSize="32dp"
            android:id="@+id/buttonDec"
            android:backgroundTint="#9C27B0"
            android:layout_margin="15dp"
            ></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEquals"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:backgroundTint="#FF5722"
            android:onClick="sum"
            android:text="="
            android:textColor="@color/white"
            android:textSize="38dp"
            app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>